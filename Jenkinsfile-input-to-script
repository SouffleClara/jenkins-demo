pipeline {
    agent any
    stages {
        stage('tryinput') {
            input{
                message 'Next step'
                ok 'submit'
                parameters{
                    string(name: 'username', defaultValue: 'John', description: 'create your namespace')
                }
            }
            steps {
                sh 'echo $1 >> ./test-input-script.sh'
                sh './test-input-script.sh'
                }

            }
        
        }
    }
}
